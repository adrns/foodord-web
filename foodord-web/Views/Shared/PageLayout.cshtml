@{
    Layout = null;
    var activeHome = (null != ViewBag.IsHome && ViewBag.IsHome) ? "active" : "";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Étel rendelés</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/style.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="~/Content/scripts.js"></script>
</head>
<body>
    <div class="container">
        <div id="error_box" class="alert alert-danger" role="alert">
            <p id="error_message">Figyelmeztetés</p>
        </div>
        <div class="header clearfix">
            <nav>
                <ul class="nav nav-pills">
                    <li role="presentation" class="@activeHome"><a href="@HttpContext.Current.Request.Url.GetLeftPart(UriPartial.Authority)@Url.Content("~/")">Főoldal</a></li>
                    <li role="presentation">
                        <a href="#">
                            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>&nbsp;Kosár&nbsp;
                            <span class="badge">
                                <span id="food_count">@ViewBag.Basket.Count()</span> tétel, <span id="basket_total">@ViewBag.Basket.Total()</span> Ft
                            </span>
                        </a>
                    </li>
                </ul>
            </nav>
            <h3 class="text-muted">Étel rendelés</h3>
        </div>

        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>
</body>
</html>
