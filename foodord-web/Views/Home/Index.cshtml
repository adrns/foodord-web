@using foodord_web.Models;

<div class="row">
    <div class="col-md-6">
        <h2>Kategóriák</h2>
        @foreach (Category category in ViewBag.Categories)
        {
            <p>
                <a href="@Url.Action("Category", new { id = category.Id })">@category.Name</a>
            </p>
        }
    </div>
    <div class="col-md-6">
        <h2>Legtöbbet rendelt tételeink</h2>
        @foreach (Food food in ViewBag.TopFoods)
        {
            <p>
                @food.Name
            </p>
        }
    </div>
</div>
